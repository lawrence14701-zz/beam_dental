{
	"env": {
		"browser": true,
		"jest": true,
        "es6": true,
        "node": true,
        "jest/globals": true,

    },
    "plugins": [
        "enzyme"
    ],
    "extends": [
        "plugin:prettier/recommended",  
        "eslint:recommended",
        "plugin:jest/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react/recommended",
        "plugin:cypress/recommended",
        "prettier",
        "prettier/react"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "warn",
        "no-eval": "error",
        "react/prop-types": 0,
        "react/display-name": 0
        
    },
    "globals": {
        "shallow": "writable",
        "render": "writable",
        "mount": "writable"
    }
}
